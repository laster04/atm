generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  SEASON_MANAGER
  TEAM_MANAGER
  VIEWER
}

enum SeasonStatus {
  DRAFT
  ACTIVE
  COMPLETED
}

enum GameStatus {
  SCHEDULED
  IN_PROGRESS
  COMPLETED
  POSTPONED
  CANCELLED
}

enum SportType {
  FOOTBALL
  BASKETBALL
  VOLLEYBALL
  HOCKEY
  TENNIS
  HANDBALL
  FLOORBALL
  OTHER
}

model User {
  id                        Int       @id @default(autoincrement())
  email                     String    @unique
  password                  String
  name                      String
  role                      Role      @default(VIEWER)
  active                    Boolean   @default(true)
  emailVerified             Boolean   @default(false)
  emailVerifiedAt           DateTime?
  activationToken           String?   @unique
  activationTokenExpiresAt  DateTime?
  passwordResetToken        String?   @unique
  passwordResetTokenExpiresAt DateTime?
  createdAt                 DateTime  @default(now())
  updatedAt                 DateTime  @updatedAt

  managedLeagues League[]
  managedSeasons Season[]
  managedTeams   Team[]
}

model League {
  id          Int       @id @default(autoincrement())
  name        String
  sportType   SportType @default(OTHER)
  logo        String?
  description String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  managerId Int?
  manager   User? @relation(fields: [managerId], references: [id], onDelete: SetNull)

  seasons Season[]
}

model Season {
  id        Int          @id @default(autoincrement())
  name      String
  startDate DateTime
  endDate   DateTime
  status    SeasonStatus @default(DRAFT)
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt

  leagueId Int
  league   League @relation(fields: [leagueId], references: [id], onDelete: Cascade)

  managerId Int?
  manager   User? @relation(fields: [managerId], references: [id], onDelete: SetNull)

  teams Team[]
  games Game[]
}

model Team {
  id           Int      @id @default(autoincrement())
  name         String
  logo         String?
  primaryColor String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  seasonId Int
  season   Season @relation(fields: [seasonId], references: [id], onDelete: Cascade)

  managerId Int?
  manager   User? @relation(fields: [managerId], references: [id], onDelete: SetNull)

  players   Player[]
  homeGames Game[]   @relation("HomeTeam")
  awayGames Game[]   @relation("AwayTeam")

  @@unique([name, seasonId])
}

model Player {
  id        Int      @id @default(autoincrement())
  name      String
  number    Int?
  position  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  teamId    Int
  team      Team            @relation(fields: [teamId], references: [id], onDelete: Cascade)
  statistic GameStatistic[] @relation("PlayerStatistic")
}

model Game {
  id        Int        @id @default(autoincrement())
  date      DateTime?
  location  String?
  homeScore Int?
  awayScore Int?
  status    GameStatus @default(SCHEDULED)
  round     Int?
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  seasonId Int
  season   Season @relation(fields: [seasonId], references: [id], onDelete: Cascade)

  homeTeamId Int
  homeTeam   Team @relation("HomeTeam", fields: [homeTeamId], references: [id], onDelete: Cascade)

  awayTeamId Int
  awayTeam   Team            @relation("AwayTeam", fields: [awayTeamId], references: [id], onDelete: Cascade)
  statistic  GameStatistic[] @relation("GameStatistic")
}

model GameStatistic {
  id       Int    @id @default(autoincrement())
  playerId Int
  player   Player @relation("PlayerStatistic", fields: [playerId], references: [id], onDelete: Cascade)
  gameId   Int
  game     Game   @relation("GameStatistic", fields: [gameId], references: [id], onDelete: Cascade)
  goals    Int?
  assists  Int?

  @@unique([playerId, gameId])
}
