# Database connection string
DATABASE_URL="postgresql://user:password@host:5432/database?schema=public"

# JWT secret for authentication - use a strong random string in production
JWT_SECRET="your-super-secret-jwt-key-change-in-production"

# Server port
PORT=3001

# CORS origin - set to your frontend domain in production
# Example: https://your-frontend-domain.com
# Leave empty or use * for development (allows all origins)
CORS_ORIGIN=https://your-frontend-domain.com

# Frontend URL for email links
APP_URL=http://localhost:5173

# Resend Email Configuration
# Get your API key from https://resend.com/api-keys
RESEND_API_KEY=re_xxxxxxxxxx

# Email sender address
# Use 'onboarding@resend.dev' for testing, or your verified domain for production
EMAIL_FROM="ATM <onboarding@resend.dev>"
